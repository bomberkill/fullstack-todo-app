{
  "compilerOptions": {
    "target": "ES2020",                       
    "module": "commonjs",                     
    "lib": ["ES2020"],                        
    "outDir": "./dist",                       
    "rootDir": "./src",                
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true,                
    "sourceMap": true                         
  },
  "include": [
    "src/**/*.ts" // Or just "server.ts" if it's at the root of /backend
    // "server.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}